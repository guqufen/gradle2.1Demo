<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.fnsco.service.dao.master.AppUserMerchantDao" >
  <resultMap id="BaseResultMap" type="net.fnsco.service.domain.AppUserMerchant" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="role_id" property="roleId" jdbcType="VARCHAR" />
    <result column="inner_code" property="innerCode" jdbcType="VARCHAR" />
    <result column="app_user_id" property="appUserId" jdbcType="INTEGER" />
    <result column="modefy_time" property="modefyTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, role_id, inner_code, app_user_id, modefy_time
  </sql>
  <!-- 根据appUserId和roleId为1的店主-->
  <select id="selectByPrimaryKey" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from u_app_user_merchant
    where app_user_id = #{appUserId,jdbcType=INTEGER} and role_id = #{roleId,jdbcType=VARCHAR}
  </select>
  <!-- 根据innerCode查询出店铺绑定 -->
  <select id="selectByInnerCode" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from u_app_user_merchant
    where inner_code = #{innerCode,jdbcType=VARCHAR} and role_id = #{roleId,jdbcType=VARCHAR}
  </select>
  <!-- 根据innerCode和appUserId删除绑定关系-->
  <delete id="deleteByPrimaryKey" >
    delete from u_app_user_merchant
    where inner_code = #{innerCode,jdbcType=VARCHAR} and app_user_id = #{appUserId,jdbcType=INTEGER}
  </delete>
  </mapper>