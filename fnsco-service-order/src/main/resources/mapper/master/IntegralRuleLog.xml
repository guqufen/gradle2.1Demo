<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.fnsco.order.service.dao.master.IntegralRuleLogDAO">
	<resultMap id="BaseResultMap"
		type="net.fnsco.order.service.domain.IntegralRuleLog">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="entity_inner_code" property="entityInnerCode"
			jdbcType="VARCHAR" />
		<result column="rule_code" property="ruleCode" jdbcType="VARCHAR" />
		<result column="integral" property="integral" jdbcType="INTEGER" />
		<result column="integral_date" property="integralDate"
			jdbcType="VARCHAR" />
		<result column="description" property="description" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
	</resultMap>
	<sql id="Base_Column_List">
		id, entity_inner_code,rule_code, description,
		integral,integral_date,create_time
	</sql>
	<!-- 条件查询日志记录 -->
	<select id="queryListByCondition" parameterType="net.fnsco.order.service.domain.IntegralRuleLog"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from i_integral_log
		<where>
			<if test="id != null and id != ''">
				AND id = #{id}
			</if>
			<if test="entityInnerCode != null and entityInnerCode != ''">
				AND entity_inner_code = #{entityInnerCode}
			</if>
			<if test="ruleCode != null and ruleCode != ''">
				AND rule_code = #{ruleCode}
			</if>
			<if test="integral != null and integral != ''">
				AND integral = #{integral}
			</if>
			<if test="integralDate != null and integralDate != ''">
				AND integral_date = #{integralDate}
			</if>
			<if test="description != null and description != ''">
				AND description = #{description}
			</if>
			<if test="createTime != null and createTime != ''">
				AND create_time = #{createTime}
			</if>
		</where>
		order by rule_code
	</select>

	<!-- 通过实体商户号entity_inner_code、积分规则代码rule_code和记分日期integral_date查找某天某类总共积分 
		可以查看某商户某天/某类型总共积分 -->
	<select id="querySumbyCondition" resultType="java.lang.Integer"
		parameterType="net.fnsco.order.service.domain.IntegralRuleLog">
		select sum(integral) from i_integral_log
		<where>
			<if test="entityInnerCode != null and entityInnerCode != ''">
				AND entity_inner_code = #{entityInnerCode}
			</if>
			<if test="ruleCode != null and ruleCode != ''">
				AND rule_code = #{ruleCode}
			</if>
			<if test="integralDate != null and integralDate != ''">
				AND integral_date = #{integralDate}
			</if>
		</where>
	</select>

	<!-- 通过实体商户号entity_inner_code、积分规则代码rule_code和记分日期integral_date查找某天某类总共积分 
		可以查看某商户某天/某类型次数 -->
	<select id="queryCountbyCondition" resultType="java.lang.Integer"
		parameterType="net.fnsco.order.service.domain.IntegralRuleLog">
		select count(1) from i_integral_log
		<where>
			<if test="entityInnerCode != null and entityInnerCode != ''">
				AND entity_inner_code = #{entityInnerCode}
			</if>
			<if test="ruleCode != null and ruleCode != ''">
				AND rule_code = #{ruleCode}
			</if>
			<if test="integralDate != null and integralDate != ''">
				AND integral_date = #{integralDate}
			</if>
		</where>
	</select>

	<!-- 插数据 -->
	<insert id="insert" parameterType="net.fnsco.order.service.domain.IntegralRuleLog">
		insert into i_integral_log(
		id,
		entity_inner_code,
		rule_code,
		integral,
		integral_date,
		description,
		create_time
		)values(
		#{id},
		#{entityInnerCode},
		#{ruleCode},
		#{integral},
		#{integralDate},
		#{description},
		#{createTime}
		)
	</insert>
</mapper>